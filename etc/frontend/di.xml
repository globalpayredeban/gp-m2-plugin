<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Checkout\Model\CompositeConfigProvider">
        <arguments>
            <argument name="configProviders" xsi:type="array">
                <item name="globalpay_card_config_provider" xsi:type="object">Globalpay\PaymentGateway\Model\Ui\CardConfigProvider</item>
            </argument>
            <argument name="configProviders" xsi:type="array">
                <item name="globalpay_ltp_config_provider" xsi:type="object">Globalpay\PaymentGateway\Model\Ui\LinkToPayConfigProvider</item>
            </argument>
        </arguments>
    </type>
    <type name="Globalpay\PaymentGateway\Block\Info">
        <arguments>
            <argument name="data" xsi:type="array">
                <item xsi:type="string" name="is_secure_mode">1</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\App\Request\CsrfValidator">
        <plugin name="csrf_validator_skip" type="Globalpay\PaymentGateway\Plugin\CsrfValidatorSkip" />
    </type>
</config>
