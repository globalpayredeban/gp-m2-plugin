<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!--==================================================================== CARD METHOD ====================================================================-->

    <!-- Card Method Facade -->
    <virtualType name="CardPaymentFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">Globalpay\PaymentGateway\Gateway\Config\CardConfig::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Globalpay\PaymentGateway\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">CardPaymentValueHandlerPool</argument>
            <argument name="validatorPool" xsi:type="object">CardPaymentValidatorPool</argument>
            <argument name="commandPool" xsi:type="object">CardPaymentCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Card Method ValueHandlerPool -->
    <virtualType name="CardPaymentValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">CardPaymentConfigValueHandler</item>
                <item name="can_authorize" xsi:type="string">Globalpay\PaymentGateway\Gateway\Config\Handler\CanAuthorizeHandler</item>
                <item name="can_capture" xsi:type="string">Globalpay\PaymentGateway\Gateway\Config\Handler\CanCaptureHandler</item>
                <item name="can_void" xsi:type="string">Globalpay\PaymentGateway\Gateway\Config\Handler\CanVoidHandler</item>
                <item name="can_cancel" xsi:type="string">Globalpay\PaymentGateway\Gateway\Config\Handler\CanVoidHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="CardPaymentConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">Globalpay\PaymentGateway\Gateway\Config\CardConfig</argument>
        </arguments>
    </virtualType>

    <!-- Card Method ValidatorPool -->
    <virtualType name="CardPaymentValidatorPool" type="Magento\Payment\Gateway\Validator\ValidatorPool">
        <arguments>
            <argument name="validators" xsi:type="array">
                <!-- TODO: Remove when country need be validated -->
                <!-- <item name="country" xsi:type="string">Globalpay\PaymentGateway\Gateway\Validator\CountryValidator</item>-->
                <item name="currency" xsi:type="string">Globalpay\PaymentGateway\Gateway\Validator\CurrencyValidator</item>
                <!-- TODO: More validations, amount in range, etc -->
                <!--<item name="availability" xsi:type="string">Globalpay\PaymentGateway\Gateway\Validator\CurrencyValidator</item>-->
            </argument>
        </arguments>
    </virtualType>

    <!-- Card Method CommandPool -->
    <virtualType name="CardPaymentCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">CardPaymentAuthorizeCommand</item>
                <item name="capture" xsi:type="string">CardPaymentCaptureCommand</item>
                <item name="void" xsi:type="string">CardPaymentRefundCommand</item>
                <item name="refund" xsi:type="string">CardPaymentRefundCommand</item>
                <item name="cancel" xsi:type="string">CardPaymentRefundCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize command -->
    <virtualType name="CardPaymentAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">CardPaymentRequest</argument>
            <argument name="transferFactory" xsi:type="object">Globalpay\PaymentGateway\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Globalpay\PaymentGateway\Gateway\Http\Client\AuthorizeClient</argument>
            <argument name="handler" xsi:type="object">Globalpay\PaymentGateway\Gateway\Response\AuthorizeHandler</argument>
        </arguments>
    </virtualType>
    <!-- Capture command -->
    <virtualType name="CardPaymentCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">CardPaymentRequest</argument>
            <argument name="transferFactory" xsi:type="object">Globalpay\PaymentGateway\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Globalpay\PaymentGateway\Gateway\Http\Client\CaptureClient</argument>
            <argument name="handler" xsi:type="object">Globalpay\PaymentGateway\Gateway\Response\CaptureHandler</argument>
        </arguments>
    </virtualType>
    <!-- Refund command -->
    <virtualType name="CardPaymentRefundCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">CardPaymentRequest</argument>
            <argument name="transferFactory" xsi:type="object">Globalpay\PaymentGateway\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Globalpay\PaymentGateway\Gateway\Http\Client\RefundClient</argument>
            <argument name="handler" xsi:type="object">Globalpay\PaymentGateway\Gateway\Response\RefundHandler</argument>
        </arguments>
    </virtualType>

    <!-- Authorize Request -->
    <virtualType name="CardPaymentRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Globalpay\PaymentGateway\Gateway\Request\TransactionRequest</item>
            </argument>
        </arguments>
    </virtualType>

    <!--==================================================================== LINKTOPAY METHOD ====================================================================-->

    <!-- LinkToPay Method Facade -->
    <virtualType name="LinkToPayFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">Globalpay\PaymentGateway\Gateway\Config\LinkToPayConfig::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Globalpay\PaymentGateway\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">LinkToPayValueHandlerPool</argument>
            <argument name="validatorPool" xsi:type="object">LinkToPayValidatorPool</argument>
        </arguments>
    </virtualType>

    <!-- LinkToPay Method ValueHandlerPool -->
    <virtualType name="LinkToPayValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">LinkToPayConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- LinkToPay Config ValueHandler -->
    <virtualType name="LinkToPayConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">Globalpay\PaymentGateway\Gateway\Config\LinkToPayConfig</argument>
        </arguments>
    </virtualType>

    <!-- LinkToPay Method ValidatorPool -->
    <virtualType name="LinkToPayValidatorPool" type="Magento\Payment\Gateway\Validator\ValidatorPool">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="currency" xsi:type="string">Globalpay\PaymentGateway\Gateway\Validator\CurrencyValidator</item>
            </argument>
        </arguments>
    </virtualType>

    <!--==================================================================== WEBHOOK ====================================================================-->
    <preference for="Globalpay\PaymentGateway\Api\WebhookInterface" type="Globalpay\PaymentGateway\Model\OrderWebhook" />
</config>
